<%= link_to "Back", workouts_path %> ||
<% if @workout.user_id==current_user.id %>
  <%= link_to "Edit", edit_workout_path %> || <%= link_to 'Delete', @workout, method: :delete %>
<% end %> <br>

<h2 class="container-fluid text-center"> <%=@workout.name %> </h2>
<p class="container-fluid text-center"> <%=@workout.user.email%> </p>

<form action="/favorites/new" method="post">
  <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
  <%= tag(:input, :type => "hidden", :name => :user_id, :value => current_user.id) %>
  <%= tag(:input, :type => "hidden", :name => :workout_id, :value => @workout.id) %>
  <input type="submit" value="Add to Favorites">
</form>

<iframe class="text-center" width="1000" height="492.5" src="<%=@workout.website %>" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>

<p> Duration: <%=@workout.duration %> </p>
<p> Difficulty: <%=@workout.difficulty %> </p>
<p> Body Focus: <%=@workout.category.name %> </p>
<p> Training Type: <%=@workout.training_type_name %> </p>
<p> Website: <a href="<%=@workout.website %>" target="_blank" ><%=@workout.website %></a> </p>
    Equipment Needed:
    <ul>
      <% @workout.equipments.each do |equipment| %>
        <li> <%= equipment.name %> </li>
      <%end%>
    </ul>
